---
const { hero } = Astro.props.site;
---
<section id="home" class="hero" data-section="hero">
  <div class="hero-container container">
    <div class="hero-content">
      <p class="eyebrow">{hero?.eyebrow}</p>
      <h1 class="hero-title">{hero?.title}</h1>
      <p class="hero-subtitle">{hero?.subtitle}</p>
      <div class="hero-buttons">
        <a href={`mailto:${Astro.props.site?.brand?.email}?subject=Kartoitusvaraus`} class="btn btn-primary">Varaa 30 min kartoitus</a>
        <a href="#services" class="btn btn-secondary">Tutustu palveluihin</a>
      </div>
      {hero?.metrics && (
        <ul class="hero-metrics">
          {hero.metrics.map((m) => (
            <li>
              <span class="metric-value">{m.value}</span>
              <span class="metric-label">{m.label}</span>
            </li>
          ))}
        </ul>
      )}
    </div>
    <div class="hero-visual" aria-hidden="true">
      <div class="hero-orb"></div>
      <div class="hero-grid"></div>
    </div>
  </div>
</section>
