---
import Base from "../layouts/Base.astro";
import Navbar from "../components/Navbar.astro";
import Hero from "../components/Hero.astro";
import Services from "../components/Services.astro";
import Platforms from "../components/Platforms.astro";
import Security from "../components/Security.astro";
import Pricing from "../components/Pricing.astro";
import Contact from "../components/Contact.astro";
import Footer from "../components/Footer.astro";
import site from "../content/site.json";
---
<Base title="AnomFIN – Yksilölliset sovellukset ja kyberturvaratkaisut" description="AnomFIN koodaa yrityksellenne yksilölliset sovellukset kaikille alustoille – kyberturva sisäänrakennettuna.">
  <Navbar site={site} />
  <main id="main">
    <Hero site={site} />
    <Services site={site} />
    <Platforms site={site} />
    <Security site={site} />
    <Pricing site={site} />
    <Contact site={site} />
  </main>
  <Footer site={site} />
</Base>

